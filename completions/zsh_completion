#compdef a2ensite a2dissite a2enmod a2dismod

local -a mods

case "$service" in
    a2ensite)
	_wanted sites expl sites \
	  _files -W /etc/httpd/sites-available
	;;
    a2dissite)
	_wanted sites expl sites \
	  _files -W /etc/httpd/sites-enabled
	;;
    a2enmod)
	mods=( /etc/httpd/mods-available/*.load(N:r:t) )
	_wanted mods expl mods compadd -a mods
	;;
    a2dismod)
	mods=( /etc/httpd/mods-enabled/*.load(N:r:t) )
	_wanted mods expl mods compadd -a mods
	;;
esac

return 0
